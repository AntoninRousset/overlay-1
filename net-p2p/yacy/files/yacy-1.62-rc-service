depend() {
	need net
}

start() {
	ebegin "Starting yacy"
	start-stop-daemon --start --quiet --user yacy --exec /usr/bin/yacy-start #--pidfile "${PIDFILE}" \
		#-- --pidfile "${PIDFILE}" --user privoxy.privoxy "${CONFFILE}" #2>/dev/null
	eend $?
}

stop() {
	ebegin "Stopping yacy"
	start-stop-daemon --stop --quiet #--pidfile "${PIDFILE}"
	eend $?
}
